<Window x:Class="MGE_WPF_LearnIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGE_WPF_LearnIT"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_Sets" />
            <MenuItem Header="_Set" />
            <MenuItem Header="_Play" />
        </Menu>
        <StackPanel DockPanel.Dock="Left"
                    Width="150">
            <TextBlock HorizontalAlignment="Center">My Sets:</TextBlock>
            <ListView x:Name="listView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Set" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="# Cards" DisplayMemberBinding="{Binding CardAmount}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <DockPanel DockPanel.Dock="Top"></DockPanel>
    </DockPanel>
</Window>
