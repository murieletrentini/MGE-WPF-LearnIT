<UserControl x:Class="MGE_WPF_LearnIT.IconTextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MGE_WPF_LearnIT"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!-- ToDo: change colors etc to style/static resource -->
    <Border Margin="5" Padding="5">
    <Button Click="onButtonClick">
        <StackPanel Orientation="Horizontal">
            <fa:FontAwesome Icon="{Binding BtnIcon}" Padding="5"/>
            <TextBlock Text="{Binding BtnText}"></TextBlock>
        </StackPanel>      
    </Button>
    </Border>
</UserControl>
