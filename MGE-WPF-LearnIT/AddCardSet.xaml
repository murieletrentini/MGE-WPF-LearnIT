<Window x:Class="MGE_WPF_LearnIT.AddCardSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGE_WPF_LearnIT"
        mc:Ignorable="d"
        Title="AddCardSet" Height="100" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock>Name your new Card Set:</TextBlock>
        <TextBox Name="CardSetTitle"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SaveCardSet" Click="SaveCardSet_Click">Save</Button>
            <Button Name="Cancel" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
