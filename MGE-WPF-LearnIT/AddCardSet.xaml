<Window x:Class="MGE_WPF_LearnIT.AddCardSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGE_WPF_LearnIT"
        mc:Ignorable="d"
        Title="AddCardSet" Height="130" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="10 10 10 0">
        <TextBlock Margin="0 0 0 5">Name your new Card Set:</TextBlock>
        <TextBox Name="CardSetTitle"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <local:IconTextButton BtnText="Save" BtnIcon="Save" Click="SaveCardSet_Click"></local:IconTextButton>
            <local:IconTextButton BtnText="Cancle" BtnIcon="Ban" Click="Cancel_Click"></local:IconTextButton>
        </StackPanel>
    </StackPanel>
</Window>
