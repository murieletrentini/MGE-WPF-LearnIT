<Window x:Class="MGE_WPF_LearnIT.AddCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGE_WPF_LearnIT"
        mc:Ignorable="d"
        Title="AddCard" Height="300" Width="300" ResizeMode="NoResize">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top">Front:</TextBlock>
        <TextBox DockPanel.Dock="Top" Name="Front" Height="80"></TextBox>
        <TextBlock DockPanel.Dock="Top">Back:</TextBlock>
        <TextBox DockPanel.Dock="Top" Name="Back" Height="80"></TextBox>
        <StackPanel DockPanel.Dock="Bottom" Name="ButtonGroup" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Name="SaveCard" Click="SaveCard_Click"></Button>
            <Button Content="Cancel" Name="CancelAddCard" Click="CancelAddCard_Click"></Button>
        </StackPanel>
        <TextBlock DockPanel.Dock="Top"></TextBlock>
    </DockPanel>
</Window>
